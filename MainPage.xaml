<Page
    x:Class="Health_Track.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Health_Track"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:Name="NavigationViewControl"
                        IsBackButtonVisible="Auto"
                        IsBackEnabled="True"
            Header="Title" 
            Loaded="NavigationViewControl_Loaded"
            ItemInvoked="NavigationViewControl_ItemInvoked"
            BackRequested="NavigationViewControl_BackRequested"
            >
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Home" Tag="home"  Content="Dashboard"/>
                <NavigationViewItem Icon="Bookmarks" Tag="logbook"  Content="Logbook"/>
                <NavigationViewItem Icon="Contact" Tag="profile"  Content="Profile"/>
            </NavigationView.MenuItems>
            <Frame x:Name="contentFrame"/>

        </NavigationView>
    </Grid>
</Page>
